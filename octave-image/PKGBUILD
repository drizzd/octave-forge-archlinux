pkgname=octave-image
pkgver=1.0.15
pkgrel=3
pkgdesc="The Octave-forge Image package provides functions for processing images."
arch=(any)
url="http://octave.sourceforge.net/image/"
license=('GPL')
groups=('octave-forge')
depends=('octave>=3.2.0' 'libjpeg' 'libpng')
makedepends=('gcc-fortran')
optdepends=()
backup=()
options=()
install=octave-image.install
source=("http://downloads.sourceforge.net/octave/image-$pkgver.tar.gz")
noextract=("image-$pkgver.tar.gz")
md5sums=('c80baf7e27a44a3366847012099df0d1')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  mkdir -p builddir
  echo "pkg build -nodeps builddir image-$pkgver.tar.gz" | octave --silent
  cp builddir/image-$pkgver.tar.gz $pkgdir/usr/share/octave/image.tar.gz
}


 casewrite
 tblread
 tblwrite"
arch=(any)
url="http://octave.sourceforge.net/statistics/"
license=('GPL' 'GPL3' 'custom:see individual files')
depends=('octave>=2.9.7' 'octave-miscellaneous')
makedepends=()
optdepends=()
backup=()
options=()
install=octave-statistics.install
source=("http://downloads.sourceforge.net/octave/statistics-1.0.10.tar.gz")
noextract=("statistics-$pkgver.tar.gz")
md5sums=('588fc3e1d86e82af1eab6d8fc6e7840e')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  mkdir -p builddir
  echo "pkg build -nodeps builddir statistics-$pkgver.tar.gz" | octave --silent
  cp builddir/statistics-$pkgver.tar.gz $pkgdir/usr/share/octave/statistics.tar.gz
}

# Contributor: Maksim Sipos <msipos@mailc.net>
# Maintainer: Clemens Buchacher <drizzd@aon.at>
_pkg=statistics
pkgname=octave-$_pkg
pkgver=1.1.0
pkgrel=1
pkgdesc="Additional statistics functions for octave."
arch=(any)
url="http://octave.sourceforge.net/$_pkg/"
license=('GPL' 'GPL3' 'custom:see individual files')
depends=('octave>=2.9.7' 'octave-miscellaneous')
makedepends=('tar' 'gzip')
optdepends=()
backup=()
options=()
install=octave-$_pkg.install
_archive=$_pkg-$pkgver.tar.gz
source=("http://downloads.sourceforge.net/octave/$_archive")
noextract=("$_archive")
md5sums=('908d4d346528711f772dbb53057cd0b6')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  mkdir -p builddir
  echo "pkg build -nodeps builddir $_archive" | octave --silent
  cp "builddir/$_archive" $pkgdir/usr/share/octave/$_pkg.tar.gz
}

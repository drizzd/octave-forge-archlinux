# Maintainer: Clemens Buchacher <drizzd@aon.at>
_pack=mechanics
pkgname=octave-$_pack
pkgver=1.1.0
pkgrel=1
pkgdesc="Library with functions useful for numerical computation in classical mechanics and structural analysis."
arch=(any)
url="http://octave.sourceforge.net/$_pack/"
license=('GPL3')
depends=('octave>=3.4.0')
makedepends=()
optdepends=()
backup=()
options=()
install=$pkgname.install
_archive=$_pack-$pkgver.tar.gz
source=("http://downloads.sourceforge.net/octave/$_pack-$pkgver.tar.gz")
noextract=("$_archive")
md5sums=('80ed75f277aea600ce7e2797a368e9eb')

build() {
  cd "$srcdir"
  mkdir -p builddir
  octave -q -f --eval "pkg build -nodeps builddir $_archive"
}

package() {
  mkdir -p "$pkgdir/usr/share/octave/packages"
  mkdir -p "$pkgdir/usr/lib/octave/packages"
  cp "$srcdir/builddir/$_archive" "$pkgdir/usr/share/octave/$_pack.tar.gz"
}

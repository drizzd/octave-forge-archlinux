# Maintainer: Clemens Buchacher <drizzd@aon.at>
pkgname=octave-struct
pkgver=1.0.9
pkgrel=1
pkgdesc="Additional Structure manipulations functions.

Structure handling
 getfields
 setfields
 tars
 arefields
 fields2cell
 cell2fields
 fieldempty
 structcat
Tests
 test_struct
"
arch=(any)
url="http://octave.sourceforge.net/struct/"
license=('GPL2')
depends=('octave>=2.9.7')
makedepends=()
optdepends=()
backup=()
options=()
install=octave-struct.install
source=("http://downloads.sourceforge.net/octave/struct-$pkgver.tar.gz")
noextract=("struct-$pkgver.tar.gz")
md5sums=('b067676d6360dbed7995658fa4266076')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  cp struct-$pkgver.tar.gz $pkgdir/usr/share/octave/struct.tar.gz
}

  BMWengine
  Boeing707
  WestlandLynx"
arch=(any)
url="http://octave.sourceforge.net/control/"
license=('GPL3')
depends=('octave>=3.3.90')
makedepends=('gcc-fortran')
optdepends=()
backup=()
options=()
install=octave-control.install
source=("http://downloads.sourceforge.net/octave/control-$pkgver.tar.gz")
noextract=("control-$pkgver.tar.gz")
md5sums=('ef8c24241504294b2706cf62ffa243e6')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  mkdir -p builddir
  echo "pkg build -nodeps builddir control-$pkgver.tar.gz" | octave --silent
  cp builddir/control-$pkgver.tar.gz $pkgdir/usr/share/octave/control.tar.gz
}
